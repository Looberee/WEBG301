{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="delivery_date">Delivery Date:</label>
        {{ form_widget(form.date_delivery,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter delivery date'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.date_delivery) }}
        </div>
    </div>
    <div class="form-group">
        <label for="id_customer">Customer Name:</label>
        {{ form_widget(form.Customer_ID,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Select ur Customer Name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Customer_ID) }}
        </div>
    </div>
    <div class="form-group">
        <label for="id_food">Food Name:</label>
        {{ form_widget(form.Food_ID,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Select food name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="quantities">Quantities:</label>
        {{ form_widget(form.Quantity,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Select Quantities'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="payment">Payment:</label>
        {{ form_widget(form.Payment,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Select Payment'
            }
        }) }}
    </div>
    </div>
    <input type="submit" name="delivery_create" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}