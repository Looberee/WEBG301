{% extends 'base.html.twig' %}

{% block title %}Delivery List!{% endblock %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>No.</th>
                <th>Customer Name</th>
                <th>Food Name</th>
                <th>Quantity</th>
                <th>Payment</th>
                <th>Date Delivery</th>
            </tr>
            </thead>
            <tbody>
            {% for delivery in deliveries%}
                <tr>
                    <th scope="row">{{ delivery.id }}</th>
                    <td>{{ delivery.customerID }}</td>
                    <td>{{ delivery.FoodID }}</td>
                    <td>{{ delivery.Quantity }}</td>
                    <td>{{ delivery.Payment }}</td>
                    <td>{{ delivery.DateDelivery|date('F j,Y, g:i a')  }}</td>
                    <td>
                        <a href="{{ path('delivery_details', {'id': delivery.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('delivery_edit', {'id': delivery.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('delivery_delete', {'id': delivery.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('delivery_create')}} " class ='btn btn-primary'>Add</a>
    </div>
{% endblock %}
