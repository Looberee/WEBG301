{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="date">Date:</label>
        {{ form_widget(form.Order_Date,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter date'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Order_Date) }}
        </div>
    </div>
    <div class="form-group">
        <label for="id_customer">Customer ID:</label>
        {{ form_widget(form.CustomerID,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter ur Customer ID'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.CustomerID) }}
        </div>
    </div>
    <div class="form-group">
        <label for="id_food">Food ID:</label>
        {{ form_widget(form.FoodID,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter food id'
            }
        }) }}
    </div>
    <input type="submit" name="create_customer" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
