{% extends 'base.html.twig' %}

{% block title %}Transaction List!{% endblock %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>No.</th>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Food ID</th>
                <th>Supply ID</th>
                <th>Delivery ID</th>
                <th>Date Transaction</th>
            </tr>
            </thead>
            <tbody>
            {% for transaction in transactions%}
                <tr>
                    <th scope="row">{{ transaction.id }}</th>
                    <td>{{ transaction.OrderID }}</td>
                    <td>{{ transaction.CustomerID }}</td>
                    <td>{{ transaction.FoodID }}</td>
                    <td>{{ transaction.SupplyID }}</td>
                    <td>{{ transaction.DeliveryID }}</td>
                    <td>{{ transaction.DateSupply|date('F j,Y, g:i a')  }}</td>
                    <td>
                        <a href="{{ path('transaction_details', {'id': transaction.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('transaction_edit', {'id': transaction.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('transaction_delete', {'id': transaction.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('transaction_create')}} " class ='btn btn-primary'>Add</a>
    </div>
{% endblock %}
