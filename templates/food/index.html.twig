{% extends 'base.html.twig' %}

{% block title %}Food List!{% endblock %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>No.</th>
                <th>Food Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for food in foods %}
                <tr>
                    <th scope="row">{{ food.id }}</th>
                    <td>{{ food.name }}</td>
                    <td>{{ food.description }}</td>
                    <td>
                        <a href="{{ path('food_details', {'id': food.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('food_edit', {'id': food.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('food_delete', {'id': food.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

