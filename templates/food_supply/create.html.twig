{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.Name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="quantity_supply">Quantity Supply:</label>
        {{ form_widget(form.Quantity_Supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Quantity_Supply'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="date_supply">Supply Date:</label>
        {{ form_widget(form.Date_Supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Date_Supply'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Date_Supply) }}
        </div>
    </div>
    <input type="submit" name="supply_create" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}