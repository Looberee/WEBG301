{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="quantity_supply">Quantity Supply:</label>
        {{ form_widget(form.quantity_supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Quantity_Supply'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="date_supply">Supply Date:</label>
        {{ form_widget(form.date_supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Enter supply date'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.date_supply) }}
        </div>
    </div>
    <input type="submit" name="food_supply_create" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}