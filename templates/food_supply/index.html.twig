{% extends 'base.html.twig' %}

{% block title %}Food Supply List!{% endblock %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>No.</th>
                <th>Name Supply</th>
                <th>Quantity Supply</th>
                <th>Date Supply</th>
            </tr>
            </thead>
            <tbody>
            {% for supply in supplies %}
                <tr>
                    <th scope="row">{{ supply.id }}</th>
                    <td>{{ supply.name }}</td>
                    <td>{{ supply.QuantitySupply }}</td>
                    <td>{{ supply.DateSupply|date('F j,Y, g:i a')  }}</td>
                    <td>
                        <a href="{{ path('supply_details', {'id': supply.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('supply_edit', {'id': supply.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('supply_delete', {'id': supply.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('supply_create')}} " class ='btn btn-primary'>Add</a>
    </div>
{% endblock %}
