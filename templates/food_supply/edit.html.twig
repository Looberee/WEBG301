{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="quantity_supply">Quantity Supply:</label>
        {{ form_widget(form.quantity_supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Quantity_Supply'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="date_supply">Date Supply:</label>
        {{ form_widget(form.date_supply,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Date_Supply'
            }
        }) }}
    </div>
    <input type="submit" name="edit_todo" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}